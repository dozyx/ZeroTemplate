<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="colorPrimaryDark">#ff33b5e5</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:textAppearance">@style/TextAppearanceNormal</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="customTextStyle">@style/CustomTextStyle</item>
        <item name="android:textViewStyle">@style/TextNormal</item>
    </style>

    <style name="TextNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ParentStyle">
        <!--        <item name="android:textColor">@android:color/holo_red_dark</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.My" parent="Theme.AppCompat">

    </style>

    <style name="DotStyle">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DotStyle.TestStyle" parent="ParentStyle"></style>

    <style name="CompatTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearanceNormal" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <attr name="customTextStyle" format="reference" />

    <style name="CustomTextStyle">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="CustomTextStyleRes">
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="CustomTextStyle2">
        <item name="android:textColor">@android:color/holo_purple</item>
    </style>

    <style name="CustomTextAppearance">
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:id">@id/edit</item>
    </style>
</resources>
