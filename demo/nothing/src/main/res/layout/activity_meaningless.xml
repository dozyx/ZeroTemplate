<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="cn.dozyx.template.justfortest.MeaninglessActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <View
                android:id="@+id/view_first"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/shape_circle_yellow" />

            <View
                android:id="@+id/view_second"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="-5dp"
                android:background="@drawable/shape_circle_blue"
                android:translationZ="1dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="@drawable/ic_menu_share"
            android:checked="true"
            android:text="111ဗမာ111" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bg_0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_link"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:hyphenationFrequency="full"
            android:lines="2"
            android:text="https://gitlab.mobiuspace./netmobiuspace111/and-team/em-snaptube-dataadapter/merge_requests/13" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</layout>

