<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">
        <OnClick app:targetId="@+id/fab" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@id/end">
        <OnClick app:targetId="@+id/iv_float_close" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/fab">
            <Layout
                android:layout_width="132dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </Constraint>
        <Constraint android:id="@+id/iv_float_close">
            <PropertySet android:visibility="gone" />
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@id/fab"
                app:layout_constraintEnd_toEndOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/btn_photo">
            <PropertySet android:visibility="gone" />
            <Layout
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/iv_float_close"
                app:layout_constraintEnd_toEndOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/btn_music">
            <PropertySet android:visibility="gone" />
            <Layout
                android:layout_width="117dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_photo"
                app:layout_constraintEnd_toEndOf="@+id/btn_video" />
        </Constraint>

        <Constraint android:id="@+id/btn_video">
            <PropertySet android:visibility="gone" />
            <Layout
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_music"
                app:layout_constraintEnd_toEndOf="parent" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/fab">
            <PropertySet android:visibility="gone"
                app:visibilityMode="ignore"/>
            <Layout
                android:layout_width="132dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </Constraint>
        <Constraint
            android:id="@+id/iv_float_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_goneMarginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/fab"
                app:layout_constraintEnd_toEndOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/btn_photo">
            <Layout
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/iv_float_close"
                app:layout_constraintEnd_toEndOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/btn_music">
            <Layout
                android:layout_width="117dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_photo"
                app:layout_constraintEnd_toEndOf="@id/btn_photo" />
        </Constraint>

        <Constraint android:id="@+id/btn_video">
            <Layout
                android:layout_width="117dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_music"
                app:layout_constraintEnd_toEndOf="@id/btn_photo" />
        </Constraint>

    </ConstraintSet>

</MotionScene>
