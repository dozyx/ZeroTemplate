<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">
        <OnClick app:targetId="@+id/fab" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@id/end">
        <OnClick app:targetId="@+id/iv_float_close" />
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/fab">
            <Layout
                android:layout_width="132dp"
                android:layout_height="48dp"
                app:layout_constraintEnd_toEndOf="@id/gl_vertical"
                app:layout_constraintTop_toTopOf="@id/gl_horizontal" />
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@+id/iv_float_close">
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
            <Transform android:rotation="180" />
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                app:layout_constraintEnd_toEndOf="@id/gl_vertical"
                app:layout_constraintTop_toTopOf="@id/gl_horizontal" />/>
        </Constraint>

        <Constraint android:id="@+id/ll_items">
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
            <Transform
                android:scaleX="0"
                android:scaleY="0"
                android:transformPivotX="117dp"
                android:transformPivotY="184dp" />
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toTopOf="@+id/gl_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/gl_vertical" />
        </Constraint>

        <Constraint android:id="@+id/btn_visibility_mode">
            <PropertySet android:visibility="invisible" />
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/fab">
            <Layout
                android:layout_width="132dp"
                android:layout_height="48dp"
                app:layout_constraintEnd_toEndOf="@id/gl_vertical"
                app:layout_constraintTop_toTopOf="@id/gl_horizontal" />
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@+id/iv_float_close">

            <Transform android:rotation="0" />
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="@id/gl_vertical"
                app:layout_constraintTop_toTopOf="@id/gl_horizontal" />
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@+id/ll_items">
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
            <Transform
                android:scaleX="1"
                android:scaleY="1"
                android:transformPivotX="117dp"
                android:transformPivotY="184dp" />

            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toTopOf="@+id/gl_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/gl_vertical" />
        </Constraint>
        <Constraint android:id="@+id/btn_visibility_mode">
            <PropertySet android:visibility="visible" />
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </Constraint>

    </ConstraintSet>

</MotionScene>
