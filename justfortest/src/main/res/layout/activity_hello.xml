<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zerofate.template.justfortest.HelloActivity">

    <Button
        android:id="@+id/btn_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textAllCaps="false" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit_test"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:digits="0123456789"
        android:inputType="number"
        android:lines="2"
        android:maxLength="10"
        app:layout_constraintTop_toBottomOf="@id/btn_hello" />

    <TextView
        style="@android:style/Widget.EditText"
        android:inputType="number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="180dp"
        android:singleLine="true"
        android:text="æ˜¯&#12288;"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btn_hello" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/edit_test">

        <include layout="@layout/merge_test" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/inset_test" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
